    "version": "0.2.0",
    "configurations": [
        {
            "name": "laser_scan_converter",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../../devel/lib/laser_scan_converter/laser_scan_converter",
            "args": [
                "run"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
